@model KonferansPortal.Models.PagedDuyuruViewModel

<h2>Duyurular</h2>

<table class="table">
    <tbody>
        @foreach (var duyuru in Model.Duyurular)
        {
            <tr>
                <td><a asp-controller= "Duyurular" asp-action="Details" asp-route-id="@duyuru.Id">@duyuru.Title</a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
    }

    Page @Model.CurrentPage of @Model.TotalPages

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
    }
</div>